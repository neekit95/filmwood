{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "moduleResolution": "bundler",
        "noEmit": true, // Не генерировать выходные файлы, используется для проверки типов
        "isolatedModules": true, // Для проверки типов в изолированных модулях
        "skipLibCheck": true // Пропуск проверки типов в библиотеках
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}