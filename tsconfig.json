{
    "compilerOptions": {
        "jsx": "react-jsx",
        "target": "ES2020",
        "module": "ESNext",
        "allowJs": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@components/*": ["components/*"],
            "@pages/*": ["pages/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build", "dist"]
}